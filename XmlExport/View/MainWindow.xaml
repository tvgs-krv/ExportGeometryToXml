		<StackPanel  Grid.Row="1" Grid.Column="1" Grid.RowSpan="3">


		<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="40" />
						<RowDefinition/>
					</Grid.RowDefinitions>
					<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
						<materialDesign:PackIcon Kind="AxisArrow"
                                             Height="20"
                                             Width="20"
                                             VerticalAlignment="Center" />
						<TextBlock
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Text="Координаты здания для экспорта:" />

					</StackPanel >
					<StackPanel Grid.Row="1" Margin="5">
						<TextBox
                            materialDesign:HintAssist.Hint="X:"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding DeltaX}"
                            VerticalAlignment="Center" Margin="5" TextChanged="textBox_TextChanged" 
                            />
						<TextBox
                            materialDesign:HintAssist.Hint="Y:"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding DeltaY}"
                            VerticalAlignment="Center" Margin="5"
                            TextChanged="textBox_TextChanged"/>
						<TextBox
                            materialDesign:HintAssist.Hint="Z:"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding DeltaZ}"
                            VerticalAlignment="Center" Margin="5"
                            TextChanged="textBox_TextChanged"/>

						<TextBox
	                        materialDesign:HintAssist.Hint="Угол поворота:"
	                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
	                        Text="{Binding Angle}"
	                        VerticalAlignment="Center" Margin="5"
	                        TextChanged="textBox_TextChanged"/>


					</StackPanel>

